<Window x:Class="Курсач_1._1.Windows.EditRoles"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Курсач_1._1.Windows"
        mc:Ignorable="d"
        Title="EditRoles" Height="450" Width="800" WindowStartupLocation="CenterOwner" Icon="tiger_icon.png">
    <Window.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}"/>
    </Window.Resources>
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="1"/>
            <GradientStop Color="Gray"/>
            <GradientStop Color="#FF717171" Offset="0.14"/>
            <GradientStop Color="#FF4B4B4B" Offset="0.39"/>
            <GradientStop Color="#FF333333" Offset="0.721"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Viewbox HorizontalAlignment="Stretch">
            <ContentPresenter x:Name="roleChageView" />
        </Viewbox>
    </Grid>
</Window>
